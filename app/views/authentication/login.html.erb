<h2 id="login_title">Musiclub User Login</h2>

<%= form_tag '/create_login', class: 'form', id: "login_form" do %>
  <%= label :user, :email, 'Email address', class: 'col-form-label' %>
  <%= email_field :user, :email, class: 'form-control' %>
  <%= label :password, 'Password', class: 'col-form-label' %>
  <%= password_field_tag(:password) %>
  <br/>
  <%= submit_tag 'Login', class: 'btn btn-primary' %>
<% end %>

